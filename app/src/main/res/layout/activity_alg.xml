<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlgActivity"
    android:orientation="vertical">
    <Button
        android:background="@drawable/btg_1"
        android:id="@+id/btn_dialog_one"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示一个普通的对话框"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_dialog_two"
        android:background="@drawable/btg_1"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示一个带普通列表的对话框"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_dialog_three"
        android:layout_marginTop="20sp"
        android:background="@drawable/btg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示一个带单选列表的对话框"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_dialog_four"
        android:layout_marginTop="20sp"
        android:background="@drawable/btg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示带复选框列表的对话框"
        android:layout_gravity="center"/>

</LinearLayout>